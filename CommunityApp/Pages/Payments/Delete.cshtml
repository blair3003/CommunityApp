@page "/Payments/{PaymentId:int}/Delete"
@model CommunityApp.Pages.Payments.DeleteModel
@{
    ViewData["Title"] = $"Delete Payment #{Model.PaymentId}";
}

<section class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="card mt-4">
        <div class="card-body">

            <form method="post">

                <p class="text-danger">Are you sure you want to delete this Payment?</p>

                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Details" asp-route-PaymentId="@Model.PaymentId" class="btn btn-secondary">Cancel</a>

            </form>
        </div>
    </div>
</section>