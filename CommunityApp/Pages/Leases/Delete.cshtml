@page "/Leases/{LeaseId:int}/Delete"
@model CommunityApp.Pages.Leases.DeleteModel
@{
    ViewData["Title"] = "Delete Lease";
}

<section class="container mt-4">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>

    <form method="post">

        <p class="text-danger">Are you sure you want to delete this Lease?</p>

        <button type="submit" class="btn btn-danger">Delete</button>

        <a asp-page="./Details" asp-route-LeaseId="@Model.LeaseId" class="btn btn-secondary">Cancel</a>

    </form>
</section>