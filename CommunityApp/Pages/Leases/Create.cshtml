@page "/Leases/Create"
@model CommunityApp.Pages.Leases.CreateModel
@{
    ViewData["Title"] = "Create Lease";
}

<section class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="card mt-4">
        <div class="card-body">
            <form method="post">

                <input type="hidden" asp-for="HomeId" />

                <div class="mb-3">
                    <label asp-for="Input.TenantName" class="form-label"></label>
                    <input asp-for="Input.TenantName" class="form-control" />
                    <span asp-validation-for="Input.TenantName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.TenantEmail" class="form-label"></label>
                    <input asp-for="Input.TenantEmail" class="form-control" />
                    <span asp-validation-for="Input.TenantEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.TenantPhone" class="form-label"></label>
                    <input asp-for="Input.TenantPhone" class="form-control" />
                    <span asp-validation-for="Input.TenantPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.MonthlyPayment" class="form-label"></label>
                    <input asp-for="Input.MonthlyPayment" class="form-control" />
                    <span asp-validation-for="Input.MonthlyPayment" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.DepositAmount" class="form-label"></label>
                    <input asp-for="Input.DepositAmount" class="form-control" />
                    <span asp-validation-for="Input.DepositAmount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.PaymentDueDay" class="form-label"></label>
                    <input asp-for="Input.PaymentDueDay" class="form-control" />
                    <span asp-validation-for="Input.PaymentDueDay" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.LeaseStartDate" class="form-label"></label>
                    <input asp-for="Input.LeaseStartDate" class="form-control" type="date" />
                    <span asp-validation-for="Input.LeaseStartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.LeaseEndDate" class="form-label"></label>
                    <input asp-for="Input.LeaseEndDate" class="form-control" type="date" />
                    <span asp-validation-for="Input.LeaseEndDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Notes" class="form-label"></label>
                    <textarea asp-for="Input.Notes" class="form-control"></textarea>
                    <span asp-validation-for="Input.Notes" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="/Homes/Details" asp-route-HomeId="@Model.HomeId" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
