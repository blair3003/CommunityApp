@page "/Communities/{CommunityId:int}/Edit"
@model CommunityApp.Pages.Communities.EditModel
@{
    ViewData["Title"] = "Update Community";
}

<section class="container mt-4">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>

    <form method="post">

        <div class="form-group mb-2">
            <label asp-for="Input.Name"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <a asp-page="./Details" asp-route-CommunityId="@Model.CommunityId" class="btn btn-secondary">Cancel</a>

        <button type="submit" class="btn btn-primary">Update</button>

    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}