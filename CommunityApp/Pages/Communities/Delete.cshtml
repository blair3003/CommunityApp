@page "/Communities/{CommunityId:int}/Delete"
@model CommunityApp.Pages.Communities.DeleteModel
@{
    ViewData["Title"] = $"Delete Community #{Model.CommunityId}";
}

<section class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="card mt-4">
        <div class="card-body">

            @if (Model.CanDelete)
            {
                <form method="post">
                    <p class="text-danger">Are you sure you want to delete this Community?</p>

                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="./Details" asp-route-CommunityId="@Model.CommunityId" class="btn btn-secondary">Cancel</a>
                </form>
            }
            else
            {
                <p>Cannot remove community while homes exist.</p>
            }
        </div>
    </div>
</section>