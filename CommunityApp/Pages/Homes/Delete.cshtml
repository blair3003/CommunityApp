@page "/Homes/{HomeId:int}/Delete"
@model CommunityApp.Pages.Homes.DeleteModel
@{
    ViewData["Title"] = "Delete Home";
}

<section class="container mt-4">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>

    <form method="post">

        <p class="text-danger">Are you sure you want to delete this home?</p>

        <button type="submit" class="btn btn-danger">Delete</button>

        <a asp-page="./Details" asp-route-HomeId="@Model.HomeId" class="btn btn-secondary">Cancel</a>

    </form>
</section>